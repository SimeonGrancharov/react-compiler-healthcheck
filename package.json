{
  "name": "react-compiler-healthcheck",
  "version": "0.1.0",
  "description": "GitHub Action to verify React components are optimized by React Compiler",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:lib && npm run build:action",
    "build:lib": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js --packages=external && tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:action": "esbuild src/action.ts --bundle --platform=node --format=cjs --outfile=dist/action/action.js --minify",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "react",
    "react-compiler",
    "github-action",
    "ci",
    "healthcheck"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@babel/core": "^7.26.0",
    "@babel/parser": "^7.26.2",
    "@babel/preset-typescript": "^7.26.0",
    "babel-plugin-react-compiler": "1.0.0",
    "glob": "^11.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/node": "^22.10.5",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
